{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "dmmf:generate"],
      "outputs": ["dist/**", ".next/**", "build/**", "public/build/**"]
    },
    "typecheck": {
      "dependsOn": ["^db:generate", "^db:push"]
    },
    "lint": {},
    "prettier:check": {},
    "dev": {
      "dependsOn": ["^db:generate", "^db:push", "^dmmf:generate", "^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^db:generate", "^db:push", "^build"],
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["^dmmf:generate"],
      "outputs": ["storybook-static/**"],
      "env": ["STORYBOOK_CONFIG_DIR"]
    },
    "storybook:serve": {
      "dependsOn": ["storybook:build"],
      "persistent": true,
      "env": ["VITE_COVERAGE"]
    },
    "storybook:coverage": {
      "dependsOn": ["storybook:build"],
      "outputs": ["coverage/**"],
      "env": ["STORYBOOK_CONFIG_DIR", "TARGET_URL", "TEST_BROWSERS"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "dmmf:generate": {
      "dependsOn": ["db:generate", "db:push"],
      "cache": false
    }
  }
}
