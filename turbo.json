{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**", "public/build/**"]
    },
    "typecheck": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "outputs": ["storybook-static/**"]
    },
    "storybook:serve": {
      "dependsOn": ["storybook:build"],
      "persistent": true
    },
    "storybook:coverage": {
      "dependsOn": ["storybook:build"],
      "outputs": ["coverage/**"]
    }
  }
}
