{
  "name": "kanban",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ci": "turbo run build lint typecheck storybook:coverage"
  },
  "devDependencies": {
    "chromatic": "^6.17.0",
    "eslint": "^8.27.0",
    "eslint-config-turbo": "^0.0.7",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.27.0"
}
